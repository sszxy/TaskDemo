<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

  <Button
      android:id="@+id/bt1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="启动外部StandardActivity" />

  <Button
      android:id="@+id/bt2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="启动标准StandardActivity" />

  <Button
      android:id="@+id/bt3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="启动外部SingleTaskActivity" />


  <Button
      android:id="@+id/bt4"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="启动内部singleTaskActivity" />

  <Button
      android:id="@+id/bt5"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="启动内部SingleInstanceActivity" />

  <Button
      android:id="@+id/bt6"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="启动指定不同Task的SingleTopActivity" />

  <Button
      android:id="@+id/bt7"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="启动指定不同Task的SingleInstanceActivity" />

  <Button
      android:id="@+id/bt8"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="不同方式启动外部应用launchActivity" />

</LinearLayout>